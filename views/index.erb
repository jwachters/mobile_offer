<h1>Mobile offers</h1>
<p>Fill in the following parameters to get your mobile offers</p>
<form action="/mobile_offers">
  <% if @request_invalid %>
    <p class="warning">The parameter 'uid' is required</p>
  <% end %>
  <p>
    <label for="uid">uid</label>
    <input type="text" name="uid" value="<%= params[:uid]%>" required="true">
  </p>
  <p>
    <label for="pub0">pub0</label>
    <input type="text" name="pub0" value="<%= params[:pub0] %>">
  </p>
  <p>
    <label for="page">page</label>
    <input type="text" name="page" value="<%= params[:page] %>">
  </p>
  <button type="submit">Request</button>
</form>

<% if @mobile_offer_service %>
  <%= yield %>
<% end %>
